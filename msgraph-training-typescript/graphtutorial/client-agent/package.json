{
  "name": "client-agent",
  "version": "1.0.0",
  "description": "AI Power Toys Client Agent - System tray app for email detection notifications",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "tsc && electron .",
    "package": "electron-builder"
  },
  "build": {
    "appId": "com.powerboys.client-agent",
    "productName": "AI Power Toys",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^24.10.0",
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "canvas": "^3.2.0",
    "eventsource": "^4.0.0",
    "node-notifier": "^10.0.1"
  }
}
